{
  "name": "bnkn",
  "displayName": "bnkn",
  "description": "Bibliographic information formatting tools",
  "publisher": "awtnb",
  "icon": "images/logo.png",
  "repository": {
    "url": "https://github.com/AWtnb/vscode-bnkn"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown",
    "onCommand:bnkn.mainMenu"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bnkn.mainMenu",
        "title": "bnkn: open main menu"
      }
    ],
    "keybindings": [
      {
        "command": "bnkn.mainMenu",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.selectBracket",
        "key": "alt+shift+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthDoubleQuote",
        "key": "ctrl+alt+w ctrl+2",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthSingleQuote",
        "key": "ctrl+alt+w ctrl+7",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthParen",
        "key": "ctrl+alt+w ctrl+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByTortoiseParen",
        "key": "ctrl+alt+w ctrl+shift+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByCornarBracket",
        "key": "ctrl+alt+w ctrl+[",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByDoubleCornarBracket",
        "key": "ctrl+alt+w ctrl+shift+[",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthBracket",
        "key": "ctrl+alt+w ctrl+]",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapBlackBracket",
        "key": "ctrl+alt+w ctrl+shift+]",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "bnkn",
      "properties": {
        "bnkn.skipUnselected": {
          "type": "boolean",
          "default": false,
          "description": "If this setting is true, only the selected string is processed; if it is false, the entire line is processed if the cursor is unselected."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
