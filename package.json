{
  "name": "bnkn",
  "displayName": "bnkn",
  "description": "Bibliographic information formatting tools",
  "publisher": "awtnb",
  "icon": "images/logo.png",
  "repository": {
    "url": "https://github.com/AWtnb/vscode-bnkn"
  },
  "version": "0.10.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Japanese",
    "Reference-list",
    "Citation",
    "Formatter"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bnkn.mainMenu",
        "title": "open main menu",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.selectBracket",
        "title": "select-bracket",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.fix-dumb-quotes",
        "title": "fix-dumb-quotes",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.format-bracket-width",
        "title": "format-bracket-width",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.format-horizontal-bars",
        "title": "format-horizontal-bars",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.format-nested-brackets",
        "title": "format-nested-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.format-punctuation",
        "title": "format-punctuation",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.swap-familyname-position",
        "title": "swap-familyname-position",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-double-brackets",
        "title": "to-double-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-full-width",
        "title": "to-full-width",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-full-width-brackets",
        "title": "to-full-width-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-half-width",
        "title": "to-half-width",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-half-width-brackets",
        "title": "to-half-width-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-single-brackets",
        "title": "to-single-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.to-to-tortoise-brackets",
        "title": "to-to-tortoise-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.period-of-year-insert",
        "title": "period-of-year-insert",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.period-of-year-remove",
        "title": "period-of-year-remove",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.toggle-Comma-type",
        "title": "toggle-Comma-type",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.toggle-Oxford-comma",
        "title": "toggle-Oxford-comma",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.trim-brackets",
        "title": "trim-brackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByFullWidthDoubleQuotes",
        "title": "wrapByFullWidthDoubleQuotes",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByFullWidthSingleQuotes",
        "title": "wrapByFullWidthSingleQuotes",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByFullWidthParens",
        "title": "wrapByFullWidthParens",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByTortoiseBrackets",
        "title": "wrapByTortoiseBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByCornarBrackets",
        "title": "wrapByCornarBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByDoubleCornarBrackets",
        "title": "wrapByDoubleCornarBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByFullWidthBrackets",
        "title": "wrapByFullWidthBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByBlackBrackets",
        "title": "wrapByBlackBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByCircles",
        "title": "wrapByCircles",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapBySquares",
        "title": "wrapBySquares",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByTriangles",
        "title": "wrapByTriangles",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByAngleBrackets",
        "title": "wrapByAngleBrackets",
        "category": "Bnkn"
      },
      {
        "command": "bnkn.wrapByDoubleAngleBrackets",
        "title": "wrapByDoubleAngleBrackets",
        "category": "Bnkn"
      }
    ],
    "keybindings": [
      {
        "command": "bnkn.mainMenu",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.selectBracket",
        "key": "alt+shift+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthDoubleQuotes",
        "key": "ctrl+alt+w ctrl+2",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthSingleQuotes",
        "key": "ctrl+alt+w ctrl+7",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthParens",
        "key": "ctrl+alt+w ctrl+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByTortoiseBrackets",
        "key": "ctrl+alt+w ctrl+shift+8",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByCornarBrackets",
        "key": "ctrl+alt+w ctrl+[",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByDoubleCornarBrackets",
        "key": "ctrl+alt+w ctrl+shift+[",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByFullWidthBrackets",
        "key": "ctrl+alt+w ctrl+]",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByBlackBrackets",
        "key": "ctrl+alt+w ctrl+shift+]",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByCircles",
        "key": "ctrl+alt+w ctrl+0",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapBySquares",
        "key": "ctrl+alt+w ctrl+4",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByTriangles",
        "key": "ctrl+alt+w ctrl+3",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByAngleBrackets",
        "key": "ctrl+alt+w ctrl+a",
        "when": "editorTextFocus"
      },
      {
        "command": "bnkn.wrapByDoubleAngleBrackets",
        "key": "ctrl+alt+w ctrl+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "bnkn",
      "properties": {
        "bnkn.skipUnselected": {
          "type": "boolean",
          "default": false,
          "description": "If this setting is true, only the selected string is processed; if it is false, the entire line is processed if the cursor is unselected."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
